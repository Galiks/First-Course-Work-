@{
    ViewData["Title"] = "Document Page";
}

    <head>
        <link href="~/css/style.css" rel="stylesheet" />
        <link href="~/css/toggleButton.css" rel="stylesheet" />
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">

                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Document" asp-action="EditLinks">Редактировать ссылки и закладки</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Document" asp-action="UsingHypertext">Использование гипертекста</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div id="messages">
            @foreach (var item in ViewBag.Messages)
            {
                <p>@item</p>
            }
        </div>

        <div class="text-center">
            <style>
                #text {
                    width: 80%;
                }
            </style>
            <div>
                <form asp-action="Index" asp-controller="Document" method="post" enctype="multipart/form-data">
                    <p>
                        <label for="word">Слово для гипертекста: </label>
                        <input type="text" name="word" id="word" />
                    </p>

                    <p>
                        <label for="text">Выберите текст и/или картинку для ссылки: </label>
                        <input type="text" name="text" id="text"  />
                        <label for="image">
                            Фото:
                            <input type="file" id="image" name="image" />
                        </label>
                    </p>

                    <p>
                        <label for="">Выберите тип ссылки: </label>
                        <lable>Закладка <input type="radio" name="hyperlinkType" value="bookmark" /></lable>
                        <label>Ссылка <input type="radio" name="hyperlinkType" value="hyperlink" /></label>
                    </p>

                    <p>
                        <label>Количество ссылок/закладок</label>
                        <input id="count" name="count" type="number" min="1"/>
                    </p>

                    @*<p>
                        <label>Выделение текста</label>
                        <input id="marking" name="marking" type="checkbox" value="true" />
                        <input name="marking" type="hidden" value="false" />
                    </p>*@

                    <button>Отправить</button>
                </form>

            </div>

            <div>
                <h3>Скачать файл: </h3>
                <div>
                    @using (Html.BeginForm("Download", "Document"))
                    {
                        <button>Скачать</button>
                    }
                </div>
            </div>

            
            <div>
                <iframe height="600px" width="120%" src='@ViewBag.LongText'></iframe>
            </div>

        </div>

    </body>
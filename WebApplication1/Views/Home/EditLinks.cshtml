@using Spire.Doc.Fields;

@{
    ViewData["Title"] = "Privacy Policy";
}

<head>

</head>
<body>
    <style>

        #maincontainer {

            width: 100%;
            height: 100%;
            text-align: center;
        }

        #leftcolumn {
            border: 1px double black;
            float: left;
            display: inline-block;
            width: 40%;
            height: 100%;
        }

        #contentwrapper {
            border: 1px double black;
            float: right;
            display: inline-block;
            width: 40%;
            height: 100%;
        }
    </style>
    <div>
        <h1>Здесь вы можеет редактировать ссылки и закладки.</h1>

        <div id="maincontainer">
            <div id="leftcolumn">
                <ol>
                    @foreach (Field item in ViewBag.Hyperlinks)
                    {
                        <li>@item.FieldText - @item.Code</li>
                    }
                </ol>
            </div>

            <div id="contentwrapper">
                <ol>
                    @foreach (string item in ViewBag.Bookmarks)
                    {
                        <li>@item</li>
                    }
                </ol>
            </div>
        </div>
        
    </div>
</body>
